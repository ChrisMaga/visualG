Algoritmo "CAPITULO 08 - EXERC (P)"

Var
   I, J, QUANT_PAR, QUANT_IMPAR, RESTO :INTEIRO
   PERC_PAR, PERC_IMPAR, TOTAL_MATRIZ: REAL
   A: VETOR [1..10, 1..7] DE INTEIRO

Inicio
//LEITURA DA MATRIZ A
   PARA I DE 1 ATE 10 FACA
      PARA J DE 1 ATE 7 FACA
         LEIA (A[I,J])
      FIMPARA
   FIMPARA
  
   LIMPATELA
   
   QUANT_PAR <- 0
   QUANT_IMPAR <- 0
   
   //QUANTIDADE DE PARES E IMPARES
   PARA I DE 1 ATE 10 FACA
      PARA J DE 1 ATE 7 FACA
         RESTO <- A[I,J] -2 * (A[I,J] DIV 2)
         SE (RESTO = 0) ENTAO
            QUANT_PAR <- QUANT_PAR + 1
         SENAO
            QUANT_IMPAR <- QUANT_IMPAR + 1
         FIMSE
         TOTAL_MATRIZ <- TOTAL_MATRIZ + 1
      FIMPARA
   FIMPARA
   
   //CALCULO DE PORCENTAGEM DA QTDADE DE NUMEROS PARES E IMPARES
   PERC_PAR <- QUANT_PAR*100/TOTAL_MATRIZ
   PERC_IMPAR <- QUANT_IMPAR*100/TOTAL_MATRIZ

   //IMPRESSÃO DOS VALORES
   PARA I DE 1 ATE 10 FACA
      PARA J DE 1 ATE 7 FACA
         ESCREVA (A[I,J]:5)
      FIMPARA
      ESCREVAL()
   FIMPARA
   ESCREVAL()
   ESCREVAL ("TOTAL DE NÚMEROS NA MATRIZ: ", TOTAL_MATRIZ)
   ESCREVAL()
   ESCREVAL ("TOTAL DE PARES: ", QUANT_PAR, ", E SUA PERCENTAGEM É DE ",PERC_PAR,"%")
   ESCREVAL()
   ESCREVAL ("TOTAL DE IMPARES: ", QUANT_IMPAR, ", E SUA PERCENTAGEM É DE ",PERC_IMPAR,"%")

Fimalgoritmo
